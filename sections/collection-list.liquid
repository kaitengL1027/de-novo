{% comment %}
  ** Collection list - dynamic **
  - Draggable section
  - Uses blocks
{% endcomment %}

{% comment %} Content settings {% endcomment %}
{%- assign title = section.settings.title -%}
{%- assign blocks = section.blocks -%}
{% comment %} End content settings {% endcomment %}

<section class="section">
  <div class="container">
    {% if blocks.size > 0 %}
      {% if title != blank %}
        <div class="one-whole column">
          <h2 class="section-header home text-align--center text-align--center">{{ title }}</h2>
        </div>
      {% endif %}

      {% for block in blocks %}
        {% comment %} Content settings {% endcomment %}
        {%- assign collection = collections[block.settings.feature_collection] -%}
        {%- assign collectionSubheading = block.settings.collection_subheading -%}
        {% comment %} End content settings {% endcomment %}

        {% if block.settings.image %}
          {%- assign collection_image = block.settings.image -%}
          {%- assign collection_image_alt = block.settings.image.alt | escape -%}
        {% elsif collection.image != blank %}
          {%- assign collection_image = collection.image -%}
          {%- assign collection_image_alt = collection.title | escape -%}
        {% else %}
          {%- assign collection_image = collection.products.first.featured_image -%}
          {%- assign collection_image_alt = collection.products.first.featured_image.alt | escape -%}
        {% endif %}

        <script>console.log({{ collection_image | json }});</script>

        {% if section.settings.square %}
          <div class="gallery__square-image {% render 'column-width', value: section.settings.frontpage_collections_per_row %} column">
            <div class="gallery__square-image-inner">

              {% if  collection_image != blank %}
                <a
                  href="{% if collection != blank %}{{ collection.url }}{% else %}#{% endif %}"
                  data-fancybox="{{ section.id }}"
                  data-src="{{ collection_image | img_url: '2000x' }}"
                  class="gallery gallery-{{ section.id }}"
                  rel="gallery"
                >
                  {% render 'image-element', image: collection_image, alt: collection_image_alt, stretch_width: true %}
                </a>
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            <div class="gallery__square-image-overlay"></div>
            <div class="gallery__square-image-content-container">
              <div class="gallery__square-image-content">
                <div class="gallery__square-image-title">
                  <p>
                    {% if collection != blank %}
                      {% if collection.title != blank %}
                        {{ collection.title }}
                      {% endif %}
                    {% endif %}
                  </p>
                </div>
                <div class="gallery__square-image-divider">
                  <div class="gallery__square-image-divider-container">
                    <span class="gallery__square-image-divider-default"></span>
                    <span class="gallery__square-image-divider-hover"></span>
                  </div>
                </div>
                <div class="gallery__square-image-subheading">
                  {% if collectionSubheading != blank %}
                    <p>
                      {{ collectionSubheading }}
                    </p>
                  {% endif %}
                </div>
              </div>
            </div>
            <a class="gallery__square-link" href="{% if collection != blank %}{{ collection.url }}{% else %}#{% endif %}"> </a>
          </div>
        {% else %}
          <div
            class="{% render 'column-width', value: section.settings.frontpage_collections_per_row %} {% if settings.mobile_products_per_row == '1' %}medium-down--one-whole{% else %}medium-down--one-half{% endif %} column thumbnail {% if section.settings.collection_count == blank and section.settings.frontpage_collections_title == blank %}blank{% endif %} price_align--{{ settings.collection_price_position }}"
            {{ block.shopify_attributes }}
          >
            <a href="{{ collection.url }}" title="{{ collection.title }}">
              <div class="relative product_image">
                {% if collection_image != blank %}
                  <div class="image__container">
                    {% render 'image-element',
                      image: collection_image.src,
                      alt: collection_image_alt,
                      object_fit: true
                    %}
                  </div>
                {% else %}
                  {% if forloop.index < 7 %}
                    {% capture placeholder_collection %}collection-{{ forloop.index }}{% endcapture %}
                  {% else %}
                    {%- assign placeholder_collection = 'collection-1' -%}
                  {% endif %}
                  {{ placeholder_collection | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>

              <div class="info">
                <div class="info__text" style="text-align: center;">
                  {% if section.settings.frontpage_collections_title %}
                    <span class="title">
                      {% if collection != blank %}
                        {{ collection.title }}
                      {% else %}
                        {{ 'homepage.onboarding.collection_title' | t }}
                      {% endif %}
                    </span>
                  {% endif %}
                </div>
                {% if section.settings.collection_count %}
                  <span class="price">
                    {% if collection != blank %}
                      {{ 'layout.counts.items_with_count' | t: count: collection.all_products_count }}
                    {% else %}
                      {{ 'layout.counts.items_with_count' | t: count: 3 }}
                    {% endif %}
                  </span>
                {% endif %}
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    {% endif %}
  </div>
</section>

<style>
  .gallery__square-link {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: 10;
  }
  .gallery__square-image-title {
    color: {{ section.settings.text_color }};
    padding-left: 15px;
    padding-right: 15px;
  }
  .gallery__square-image:hover .gallery__square-image-title {
    color: {{ section.settings.text_hover_color }};
  }
  .gallery__square-image:hover .gallery__square-image-subheading {
    color: {{ section.settings.text_hover_color }};
  }
  .gallery__square-image-title p {
    text-align: center;
  }
  .gallery__square-image-subheading {
    color: {{ section.settings.text_color }};
    padding-left: 15px;
    padding-right: 15px;
  }
  .gallery__square-image-subheading p {
    text-align: center;
  }
  .gallery__square-image-divider {
    margin-top: 10px;
    margin-bottom: 10px;
    width: auto;
    padding-left: 15px;
    padding-right: 15px;
  }
  .gallery__square-image-divider-container {
    width: 100%;
    position: relative;
  }
  .gallery__square-image-divider-default {
    position: absolute;
    display: block;
    left: 0;
    top: 100%;
    margin: 0 auto;
    height: 1px;
    background-color: {{ section.settings.text_color }};
    width: 100%;
  }
  .gallery__square-image-divider-hover {
    position: absolute;
    display: {% if section.settings.animation == false %}none{% else %}block{% endif %};
    left: 0;
    right: 0;
    top: 100%;
    margin: 0 auto;
    height: 1px;
    background-color: {{ section.settings.text_hover_color }};
    width: 0%;
    transition: width 0.5s ease;
  }
  .gallery__square-image:hover .gallery__square-image-divider-default {
    display: {% if section.settings.animation == true %}none{% endif %};
    background-color: {{ section.settings.text_hover_color }};
  }
  .gallery__square-image:hover .gallery__square-image-divider-hover {
    width: 100%;
    display: {% if section.settings.animation == false %}none{% endif %};
  }
  @media only screen and (min-width: 500px) and (max-width: 797px) {
    .gallery__square-image-title p {
      font-size: 22px;
    }
    .gallery__square-image-subheading p {
      font-size: 22px;
    }
  }
</style>

{% schema %}
{
  "name": "Collection list",
  "class": "shopify-section--list-collections",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Collection list"
    },
    {
      "type": "range",
      "id": "frontpage_collections_per_row",
      "label": "Collections per row",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "frontpage_collections_title",
      "label": "Show collection title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "collection_count",
      "label": "Show collection product count",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "square",
      "label": "Square Images",
      "default": true
    }, 
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_hover_color",
      "label": "Text Hover Color",
      "default": "#08210c"
    }, 
    {
      "type": "checkbox",
      "id": "animation",
      "label": "Animation",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "feature_collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "800 x 800px recommended"
        }, 
        {
          "type": "text", 
          "id": "collection_subheading", 
          "label": "Collection Subheading"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection list",
      "category": "Collection",
      "settings": {},
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
